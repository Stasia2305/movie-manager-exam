<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="538.0" prefWidth="775.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.moviemanagerexam.controller.MainController">
    <top>
        <VBox spacing="5">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets bottom="5" left="10" right="10" top="10" />
                </padding>
                <Label text="Search:" />
                <TextField fx:id="searchField" promptText="Search movies..." />
                <Label text="Category:" />
                <MenuButton fx:id="categoryFilterMenu" text="Select Categories" />
                <Label text="Min Rating:" />
                <Spinner fx:id="minRatingSpinner" prefWidth="80" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="0" />
                </padding>
                <Label text="IMDb Link:" />
                <TextField fx:id="imdbLinkField" prefWidth="300" promptText="Paste IMDb URL..." />
                <Button fx:id="addByLinkButton" text="Add by Link" />
            </HBox>
         <ButtonBar prefHeight="0.0" prefWidth="598.0" />
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="titleColumn" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" text="Movie Title" />
                <TableColumn fx:id="imdbRatingColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="IMDb Rating" />
                <TableColumn fx:id="personalRatingColumn" maxWidth="125.0" minWidth="125.0" prefWidth="125.0" text="Personal Rating" />
            <TableColumn fx:id="categoryColumn" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" text="Category" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="addButton" text="Add Movie" />
            <Button fx:id="editButton" text="Edit Movie" />
            <Button fx:id="deleteButton" prefHeight="27.0" prefWidth="93.0" text="Delete Movie" />
            <Button fx:id="editRatingButton" text="Edit Rating" />
            <Button fx:id="playButton" text="Play Movie" />
        </HBox>
    </bottom>
</BorderPane>
